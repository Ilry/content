		<Replace Tag="LOC_LEADER_ANT_SUU_KYI_NAME" Language="zh_Hans_CN">
			<Text>昂山素季</Text>
		</Replace>
		<Replace Tag="LOC_TRAIT_LEADER_ANT_ROADMAP_TO_DEMOCRACY_NAME" Language="zh_Hans_CN">
