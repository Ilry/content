		<Replace Tag="LOC_PEDIA_LEADERS_PAGE_LEADER_JFD_ISABELLA_II_SUBTITLE" Language="zh_Hans_CN">
			<Text>西班牙女王</Text>
		</Replace>
		<Replace Tag="LOC_PEDIA_LEADERS_PAGE_LEADER_JFD_ISABELLA_II_QUOTE" Language="zh_Hans_CN">
